# ValueSet API Configuration
# Copy this file to .env and update values as needed

# Application Settings
APP_NAME="ValueSet API"
APP_VERSION="0.1.0"
APP_DESCRIPTION="ValueSets controlled vocabularly server"
ENVIRONMENT=production
DEBUG=false

# Database Configuration
# Options: duckdb, sqlite
DATABASE_BACKEND=duckdb
DATABASE_PATH=valueset.db

# pURL Configuration
# Base URL for generating permanent URLs
PURL_BASE_URL=https://api.example.com
PURL_VALUESET_TEMPLATE={base_url}/valuesets/{accession}
PURL_TERM_TEMPLATE={base_url}/terms/{accession}

# Server Configuration
HOST=0.0.0.0
PORT=8000
WORKERS=4
RELOAD=false

# CORS Configuration
# Use ["*"] for development, restrict in production
CORS_ORIGINS=["*"]
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=["*"]
CORS_ALLOW_HEADERS=["*"]

# GA4GH Service Info
SERVICE_ID=org.example.valueset
ORGANIZATION_NAME=Your Organization
ORGANIZATION_URL=https://example.com
