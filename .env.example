# ValueSet API Configuration
# Copy this file to .env and update values as needed

# Application Settings
APP_NAME="ValueSet API"
APP_VERSION="0.1.0"
APP_DESCRIPTION="ValueSets controlled vocabulary server"
ENVIRONMENT=production
DEBUG=false

# Database Configuration
DATABASE_PATH=valueset.db

# Endpoint Configuration
# Set to false to disable individual UI/docs endpoints
ENABLE_DOCS=true
ENABLE_REDOC=true
ENABLE_BROWSE=true

# pURL Configuration
# Base URL for generating permanent URLs
PURL_BASE_URL=https://api.example.com
PURL_VALUESET_TEMPLATE={base_url}/valuesets/{accession}
PURL_TERM_TEMPLATE={base_url}/terms/{accession}

# Server Configuration
HOST=0.0.0.0
PORT=8000
WORKERS=4
RELOAD=false

# CORS Configuration
# Use ["*"] for development, restrict to specific origins in production.
# NOTE: Setting CORS_ALLOW_CREDENTIALS=true requires explicit origins, not ["*"].
CORS_ORIGINS=["*"]
CORS_ALLOW_CREDENTIALS=false
CORS_ALLOW_METHODS=["*"]
CORS_ALLOW_HEADERS=["*"]

# GA4GH Service Info
SERVICE_ID=org.example.valueset
ORGANIZATION_NAME=Your Organization
ORGANIZATION_URL=https://example.com
